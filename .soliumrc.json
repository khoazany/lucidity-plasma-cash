{
  "extends": "solium:recommended",
  "plugins": [
    "security"
  ],
  "rules": {
    "quotes": [
      "error",
      "double"
    ],
    "indentation": [
      "error",
      2
    ],
    "security/no-inline-assembly": 0,
    "security/no-assign-params": 0,
    "security/no-block-members": [0, ["timestamp"]]
  }
}
